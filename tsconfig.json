{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": [],
  "exclude": ["node_modules"],
  "references": [
    { "path": "./packages/database" },
    { "path": "./packages/shared" },
    { "path": "./apps/web" }
  ]
}