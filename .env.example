# Database Configuration (Supabase)
# Copy the connection string from Supabase → Project Settings → Database → Connection string → Node.js
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@db.YOUR_PROJECT_ID.supabase.co:5432/postgres
# Supabase requires SSL; keep this true unless you know what you're doing
DATABASE_SSL=true
# Leave this true so Node verifies Supabase certificates
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Optional: expose Supabase keys if other services need them
SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# API Configuration
API_PORT=3001
NODE_ENV=development
JWT_SECRET=your-jwt-secret-here

# LLM API Configuration
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# SEC EDGAR Configuration
SEC_USER_AGENT=your-company-name your-email@domain.com
SEC_API_RATE_LIMIT=10

# External API Keys (Optional)
SEC_API_IO_KEY=your-sec-api-io-key

# Frontend Configuration
VITE_API_URL=http://localhost:3001

# Ingestion Service Configuration
INGESTION_SCHEDULE_ENABLED=true
INGESTION_CRON_SCHEDULE=0 0 * * 0  # Every Sunday at midnight

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=./logs

# Cache Configuration
ANALYSIS_CACHE_TTL_HOURS=24
